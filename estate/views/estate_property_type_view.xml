<odoo>
    <record id="estate_property_type_record" model="ir.actions.act_window">
        <field name="name">type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    
    <record id="estate_property_type_search_view" model="ir.ui.view">
        <field name="name">estate.property.type.view.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="group_by_name" string="Group by name" context="{'group_by':'name'}"/>
            </search>
        </field>
    </record>



    <record id="view_estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <field name="name"/>
                <field name="sequence" widget="handle"/>
            </list>
        </field>
    </record>

    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_open_property_ids" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="property_count" widget="line_count"/>
                        </button>    
                    </div>    
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="state"/>
                                    <field name="price"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>